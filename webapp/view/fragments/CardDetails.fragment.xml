<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Panel id="pCards" expandable="true" headerText="Cards Details" width="auto" class="sapUiResponsiveMargin">
        <content>
            <List id="myList" width="50%" items="{oBankDetails>/cardDetails}">
                <items>
                    <StandardListItem id="card1" 
                    title="{=${oBankDetails>cardcompany}.toUpperCase()} {oBankDetails>cardnumber}" 
                    description="{=${oBankDetails>cardtype}.toUpperCase()} {oBankDetails>assignmentdate}" 
                    icon="sap-icon://BusinessSuiteInAppSymbols/icon-debit-card" 
                    iconInset="false" 
                    highlight="{=${oBankDetails>state}===true ? 'Success' : 'Error'}" 
                    info="{=${oBankDetails>state}===true ? 'Active' : 'Expired'}" 
                    infoState="{=${oBankDetails>state}===true ? 'Success' : 'Error'}" 
                    infoStateInverted="true" />

                    <!-- <StandardListItem id="card2" title="Visa (123456789)" description="Credit Card: assigned on 10 Aug, 2023" icon="sap-icon://BusinessSuiteInAppSymbols/icon-debit-card" iconInset="false" highlight="Error" info="Expired" infoState="Error" infoStateInverted="true" />

                                <StandardListItem id="card3" title="Master Card(1234567892123)" description="Debit Card: assigned on 20 Aug, 2023" icon="sap-icon://BusinessSuiteInAppSymbols/icon-debit-card" iconInset="false" highlight="Success" info="Active" infoState="Success" infoStateInverted="true" /> -->
                </items>
            </List>
        </content>
    </Panel>
</core:FragmentDefinition>