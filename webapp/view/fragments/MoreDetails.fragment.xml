<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog id="moreBankDetials" title="Confidential Details">
        <VBox id="vbox1" class="sapUiSmallMargin">
            <Title text="Account Details" id="bankAccDetails"></Title>
            <HBox id="hbox1">
                <Label text="Bank Account Number" id="bankAccNum" class="sapUiSmallMarginEnd"></Label>
                <Text text="2323423*****" id="bankAccVal"></Text>
            </HBox>
            <HBox id="hbox2">
                <Label text="Account Holder Name" id="bankAccHold" class="sapUiSmallMarginEnd"></Label>
                <Text text="Golddust" id="bankAccHoldVal"></Text>
            </HBox>
            <HBox id="hbox3">
                <Label text="IFSC" id="bankIfsc" class="sapUiSmallMarginEnd"></Label>
                <Text text="001212****" id="bankIfscVal"></Text>
            </HBox>
        </VBox>
        <beginButton>
            <Button id="closeBtn" text="Close" press=".onCloseBankDetails"/>
        </beginButton>
    </Dialog>
</core:FragmentDefinition>