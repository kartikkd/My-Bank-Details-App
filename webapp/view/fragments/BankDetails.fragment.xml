<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:m="sap.suite.ui.microchart">
    <Panel id="pAccountDetails" expandable="false" width="auto" class="sapUiResponsiveMargin">
        <content>
            <HBox id="hBox4">
                <Avatar id="aUserProfile" src="{/profile}" displaySize="XL" showBorder="true" press="onPress"/>
                <VBox id="vbox1" binding="{/accountDetails}" class="sapUiSmallMargin sapUiLargeMarginBegin">
                    <Title text="{i18n>accDetails}" id="bankAccDetails"></Title>
                    <HBox id="hbox1">
                        <Label text="{i18n>accNum}" id="bankAccNum" class="sapUiSmallMarginEnd"></Label>
                        <Text text="{AccountNum}" id="bankAccVal"></Text>
                    </HBox>
                    <HBox id="hbox2">
                        <Label text="{i18n>accHName}" id="bankAccHold" class="sapUiSmallMarginEnd"></Label>
                        <Text text="{Name}" id="bankAccHoldVal"></Text>
                    </HBox>
                    <HBox id="hbox3">
                        <Label text="{i18n>IFSCode}" id="bankIfsc" class="sapUiSmallMarginEnd"></Label>
                        <Text text="{Ifsc}" id="bankIfscVal"></Text>
                    </HBox>

                    <Button id="openBankDetails" type="Neutral" text="{i18n>findMoreBtn}" class="" press=".onOpenBankDetails" />
                    <!-- test line 2 -->
                </VBox>

                <FlexBox id="flexBox1" width="20rem" height="10rem" alignItems="Start" justifyContent="SpaceBetween">
                    <items>
                        <m:InteractiveDonutChart id="donutChart" selectionChanged="onSelectionChanged">
                            <m:segments>
                                <m:InteractiveDonutChartSegment id="chart1" 
                                label="House Spending" 
                                value="{oBankDetails>/housespending}" 
                                displayedValue="{oBankDetails>/housespending}%"
                                color="Error"/>
                                <m:InteractiveDonutChartSegment id="chart2" 
                                label="EMI" 
                                value="{oBankDetails>/emi}" 
                                displayedValue="{oBankDetails>/housespending}%"
                                color="Critical"/>
                                <m:InteractiveDonutChartSegment id="chart3" 
                                label="Entertainment" 
                                value="{oBankDetails>/entertainment}" 
                                displayedValue="{oBankDetails>/entertainment}%"
                                color="Good"/>
                            </m:segments>
                        </m:InteractiveDonutChart>
                    </items>
                </FlexBox>
            </HBox>
        </content>
    </Panel>


</core:FragmentDefinition>