<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Panel id="pAccountDetails" expandable="false" headerText="AccountDetails" width="auto" class="sapUiResponsiveMargin">
        <content>
            <HBox id="hBox4">
                <Avatar id="aUserProfile" src="{/Woman01}" displaySize="XL" showBorder="true" press="onPress"/>
                <VBox id="vbox1" class="sapUiSmallMargin sapUiLargeMarginBegin">
                    <Title text="{i18n>accDetails}" id="bankAccDetails"></Title>
                    <HBox id="hbox1">
                        <Label text="{i18n>accNum}" id="bankAccNum" class="sapUiSmallMarginEnd"></Label>
                        <Text text="2323423*****" id="bankAccVal"></Text>
                    </HBox>
                    <HBox id="hbox2">
                        <Label text="{i18n>accHName}" id="bankAccHold" class="sapUiSmallMarginEnd"></Label>
                        <Text text="Golddust" id="bankAccHoldVal"></Text>
                    </HBox>
                    <HBox id="hbox3">
                        <Label text="{i18n>IFSCode}" id="bankIfsc" class="sapUiSmallMarginEnd"></Label>
                        <Text text="001212****" id="bankIfscVal"></Text>
                    </HBox>

                    <Button id="openBankDetails" type="Neutral" text="{i18n>findMoreBtn}" class="" press=".onOpenBankDetails" />

                </VBox>
            </HBox>
        </content>
    </Panel>


</core:FragmentDefinition>